<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Joomla\Component\Birthdays\Administrator\Field">
	<fieldset name="details">

       <field name="id" type="text" default="0" label="COM_BIRTHDAYS_FORM_LBL_BIRTHDAY_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" /> 

	   <field
			name="birthday"
			type="calendar"
			label="COM_BIRTHDAYS_BIRTHDAY_BIRTHDAY_LBL"
			hint="COM_BIRTHDAYS_BIRTHDAY_BIRTHDAY_DESC"
			required="true"
			default=""
			/>
	
		<field
			name="name"
			type="text"
			label="COM_BIRTHDAYS_BIRTHDAY_NAME_LBL"
			hint="COM_BIRTHDAYS_BIRTHDAY_NAME_DESC"
			required="true"
			default=""
			/>
	
		<field
			name="created_by"
			type="createdby"
			label="COM_BIRTHDAYS_BIRTHDAY_CREATED_BY_LBL"
			hint="COM_BIRTHDAYS_BIRTHDAY_CREATED_BY_DESC"
			default=""
			/>
	
		<field
			name="state"
			type="list"
			label="COM_BIRTHDAYS_BIRTHDAY_STATE_LBL"
			hint="COM_BIRTHDAYS_BIRTHDAY_STATE_DESC"
			class="inputbox"
			size="1"
			default="1"
			>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
	
		<field
			name="ordering"
			type="hidden"
			label="COM_BIRTHDAYS_BIRTHDAY_ORDERING_LBL"
			hint="COM_BIRTHDAYS_BIRTHDAY_ORDERING_DESC"
			default="0"
			/>

	</fieldset>
</form>
